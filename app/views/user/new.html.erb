<% @page_title = "UserAuth | Signup" %>
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'user', :action => 'create'}) do |f| %>
    <p> Username:</br> <%= f.text_field :UserName%> </p>
    <p> Email:</br> <%= f.text_field :UserEmailID%> </p>
    <p> Password:</br> <%= f.password_field :Password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :PasswordConfirmation%> </p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>